toolbar-border-color = #c0c0c0
scrollbar-border-color = #dcdcdc
scrollbar-track-size = 12px
scrollbar-thumb-size = 10px
shim-background-color = #f5f5f5
scrollbar-thumb-color = #dadce0
font-color = #000
add-btn-height = 27px

*
	box-sizing: border-box

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video
	margin: 0
	padding: 0
	border: 0
	font-size: 100%
	font: inherit
	font-family: Roboto,RobotoDraft,Helvetica,Arial,sans-serif
	vertical-align: baseline

/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section
	display: block

body
	line-height: 1

ol, ul
	list-style: none

blockquote, q
	quotes: none

blockquote:before, blockquote:after,
q:before, q:after
	content: ''
	content: none

html
	overflow: hidden

table
	border-collapse: collapse
	border-spacing: 0

.polymersheet
	width: 100%
	height: 100%

#polymersheet__view
	position: relative

#polymersheet__content
	position: absolute
	object-fit: contain

#polymersheet__toolbar
	border-bottom: 1px solid toolbar-border-color

#polymersheet__bottombar
	position: relative
	z-index: 100
	background: #fff

.polymersheet__view_grid
	position: relative
	font-size: 0

.polymersheet__header--col,
.polymersheet__header_shim--col
	display: inline-block

.polymersheet__header_shim--col,
.polymersheet__header_shim--row
	background: shim-background-color
	border: 1px solid scrollbar-border-color

.polymersheet__header_shim--col
	border-top-width: 0

.polymersheet__scrollbar
	position: absolute
	border: 1px solid scrollbar-border-color
	background: white
	z-index: 2

	&::-webkit-scrollbar-thumb
		border-radius: (scrollbar-thumb-size / 2)px
		border: 1px solid white
		background: scrollbar-thumb-color
		&:hover
			background: darken(scrollbar-thumb-color, 10%)

	&::-webkit-scrollbar-button
		display: none

	&--vertical
		top: 0
		right: 0
		border-top-width: 0
		border-bottom-width: 0
		overflow: hidden scroll

		&::-webkit-scrollbar
			width: scrollbar-thumb-size

	&--horizontal
		left: 0
		bottom: 0
		border-left-width: 0
		border-right-width: 0
		overflow: scroll hidden

		&::-webkit-scrollbar
			height: scrollbar-thumb-size

.polymersheet__scrollbar_inner--vertical
	width: 1px

.polymersheet__scrollbar_inner--horizontal
	height: 1px

.polymersheet__scrollbar_corner
	position: absolute
	right: 0
	bottom: 0
	width: scrollbar-track-size
	height: scrollbar-track-size
	background: shim-background-color
	border: 1px solid scrollbar-border-color

#polymersheet__cells_overlay
	position: absolute
	z-index: 0

.polymersheet__add_rows_container
	position: absolute
	z-index: 1
	display: flex
	align-items: center
	font-size: 13px
	color: font-color

	button
		height: add-btn-height
		margin-right: 8px
		padding: 0 16px
		line-height: add-btn-height
		border: 1px solid rgba(0, 0, 0, 0.1)
		background: #f5f5f5
		background-image: -webkit-linear-gradient(top,#f5f5f5,#f1f1f1)
		cursor: pointer
		&:hover
			border-color: rgba(0, 0, 0, 0.2)

	input
		height: add-btn-height
		margin-right: 8px
		padding: 0 0 0 8px
		line-height: add-btn-height
		border: 1px solid rgba(0, 0, 0, 0.1)
		border-radius: 0
		outline: 0
		&:focus
			border-color: rgba(0, 0, 0, 0.2)
		&::-webkit-outer-spin-button
		&::-webkit-inner-spin-button
			-webkit-appearance: none



